# Solution 1:
class Solution:
    def reverse(self, x: int) -> int:
        sign = 1
        if x < 0:
            sign = -1
            x *= sign
            
        x = str(x)
        y = list(x)
        y.reverse()
        x = "".join(y)
        x = int(x)
        if x>2**31 -1 or x < -2**31:
            return 0
        else:
            return x*sign
